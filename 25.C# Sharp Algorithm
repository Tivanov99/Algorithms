using System;

namespace Opp_Train
{
    public class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine(MakeCopies("PHP", 4));
        }
        public static string MakeCopies(string x, int copies)
        {
            string temp = "";
            if (copies > 0)
            {
                for (int i = 0; i < copies; i++)
                {
                    temp += x;
                }
            }
            return temp;
        }
    }
}
