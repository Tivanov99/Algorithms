using System;

namespace Opp_Train
{
    public class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine(Test(-1, 0, 1));
        }
        public static bool Test(int s, int m, int l)
        {
            int sMDiff = s-m;
            int mLDiff = m - l;

            return sMDiff == mLDiff;
        }
    }
}
