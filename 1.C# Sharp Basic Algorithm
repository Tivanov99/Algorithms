using System;

namespace Basic_Algorithm
{
    class Program
    {
        static void Main(string[] args)
        {
            InputReader();
        }
        public static void InputReader()
        {
            int first = int.Parse(Console.ReadLine());
            int second = int.Parse(Console.ReadLine());
            CalculateResult(first, second);
        }
        public static bool IsTheSame(int first, int second)
        {
            if (first == second)
            {
                return true;
            }
            return false;
        }
        public static void CalculateResult(int first, int second)
        {
            if (IsTheSame(first, second))
            {
                OuputPrinter((first + second) * 3);
                return;
            }
            OuputPrinter(first + second);
        }
        public static void OuputPrinter(int sum)
        {
            Console.WriteLine(sum);
        }
    }
}
